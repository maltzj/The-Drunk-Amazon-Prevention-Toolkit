{
        "name": "The Drunk Amazon Purchase Prevention Kit",
        "version": "1.0",
        "manifest_version": 2,
        "content_scripts" : [
        {
                "matches": ["http://*/*", "https://*/*"],
                "css": ["drunk-amazon-style.css", "bootstrap.css"],
                "js": ["jquery-1.8.0.min.js", "bootstrap.min.js", "preventer.js"],
                "run_at": "document_end"
        }        
        ],
        "background" :
        {
                "scripts" : ["background/background.js"],
                "persistent" : false
        },
        "browser_action":
        {
                "default_icon": "images/icon.jpg",      
                "default_title": "Protected Credit Cards",
                "default_popup": "listPasswords.html"
        }
 
}